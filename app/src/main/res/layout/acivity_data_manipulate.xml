<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5sp"
    tools:ignore="HardcodedText">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:textSize="18sp"
        android:hint="Title"
        android:layout_marginTop="10sp"
        android:id="@+id/modifyTitle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:textSize="18sp"
        android:hint="Details"
        android:id="@+id/modifyDetails"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/modifyDate"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:layout_gravity="center"
            android:textSize="18sp"
            >

        </EditText>
        <Button
            android:id="@+id/btnDatePickerForModify"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="日付"
            android:textSize="18sp"
            android:layout_marginStart="10sp"
            android:textColor="@color/white"
            >
        </Button></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/modifyTime"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:hint="Time"
            android:textSize="18sp"
            android:layout_gravity="center"
            >

        </EditText>
        <Button
            android:id="@+id/btnTimePickerForModify"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="時間"
            android:textSize="18sp"
            android:layout_marginLeft="10sp"
            android:textColor="@color/white"
            >
        </Button>

    </LinearLayout>
    <Switch
        android:id="@+id/notificationStatusChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="49sp"
        android:minHeight="49sp"
        android:padding="3sp"
        android:text="通知 ON/OFF"
        android:textSize="18sp"
        android:layout_marginTop="10sp"
        android:checked="true"
        android:textColor="@color/black"
        tools:ignore="UseSwitchCompatOrMaterialXml">

    </Switch>
    <RadioGroup
        android:id="@+id/radioGroupModify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5sp"
        android:gravity="center">
        <RadioButton
            android:id="@+id/radio_5m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:text="5分前"
            />
        <RadioButton
            android:id="@+id/radio_15m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:text="15分前"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/radio_30m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:text="30分前"
            />
        <RadioButton
            android:id="@+id/radio_60m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1時間前"
            />

    </RadioGroup>
    <Button
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="保存"
        android:textSize="18sp"
        android:layout_marginTop="20sp"
        android:id="@+id/buttonModifyToDo"

        />

    <Button
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:text="完了/削除"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:id="@+id/buttonRemoveToDo"


        />

</LinearLayout>